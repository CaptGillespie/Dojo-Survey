@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dojo Survey</h1>
    <div class = "survey_box">
        <h3>Your Name: @ViewBag.name </h3>
        <h3>Dojo Location: @ViewBag.location</h3>
        <h3>Favorite Language:@ViewBag.language</h3>
        <h3>Comment (optional):@ViewBag.textarea</h3>
        <button href="index" class="Submit" type="Submit" value="Go Back">Go Back</button>

    </div>
</div>

