@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dojo Survey</h1>
    <div class = "survey_box">
        <form action="result" method ="POST">
        <h3>Your Name: <input name="name" type ="text"></h3>
        <h3>Dojo Location:<select name="location">
            <option value="Seattle">Seattle</option>
            <option value="San Francisco">San Francisco</option>
            <option value="New York">New York</option></select></h3>
        <h3>Favorite Language:<select name="language">
            <option value="C#">C#</option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option></select></h3>
        <h3>Comment (optional):</h3>
        <input name="textarea" class="comment" type="textarea" /><br><br>
        <button class="Submit" type="Submit" value="Submit">Submit</button>
    </form>
    </div>
</div>

<style>
.survey_box{
    outline: 2px solid black;
    height: 400px;
    padding: 10px;
}
.comment{
    width: 500px;
    height: 150px;
    outline: 2px solid black;
}
.Submit{
    background-color: blue;
    color: white;
    margin-left: 400px;
    width: 100px;
}
</style>